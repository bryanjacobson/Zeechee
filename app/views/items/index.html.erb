<h1>Listing items</h1>

<table>
  <tr>
    <th>Item type</th>
    <th>Content</th>
    <th>Position</th>
    <th>Body</th>
    <th>Options</th>
    <th>Size</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.item_type_id %></td>
    <td><%= item.content_id %></td>
    <td><%= item.position %></td>
    <td><%= item.body %></td>
    <td><%= item.options %></td>
    <td><%= item.size %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

