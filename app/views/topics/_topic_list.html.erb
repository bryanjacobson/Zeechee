<table>
  <tr>
    <th>Icon</th>
    <th>Title</th>
    <th>Description</th>
    <th>User</th>
  </tr>

<% @topics.each do |topic| %>
  <tr>
    <td>
      <%= image_tag(default_topic_icon(topic.icon), :width => '100') %>
    </td>
    <td><%= link_to topic.title, topic %></td>
    <td><%= topic.description %></td>
    <td>
      <%= topic.user.name %>
    </td>
  </tr>
<% end %>
</table>
