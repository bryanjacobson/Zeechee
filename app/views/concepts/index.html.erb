<h1>Listing concepts</h1>

<table>
  <tr>
    <th>Icon</th>
    <th>Title</th>
    <th>Description</th>
    <th>User</th>
    <th>Topic</th>
    <th>Ancestry</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @concepts.each do |concept| %>
  <tr>
    <td><%= concept.icon %></td>
    <td><%= concept.title %></td>
    <td><%= concept.description %></td>
    <td><%= concept.user_id %></td>
    <td><%= concept.topic_id %></td>
    <td><%= concept.ancestry %></td>
    <td><%= concept.position %></td>
    <td><%= link_to 'Show', concept %></td>
    <td><%= link_to 'Edit', edit_concept_path(concept) %></td>
    <td><%= link_to 'Destroy', concept, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

