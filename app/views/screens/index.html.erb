<h1>Listing screens</h1>

<table>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Topic</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @screens.each do |screen| %>
  <tr>
    <td><%= screen.title %></td>
    <td><%= screen.user_id %></td>
    <td><%= screen.topic_id %></td>
    <td><%= screen.position %></td>
    <td><%= link_to 'Show', screen %></td>
    <td><%= link_to 'Edit', edit_screen_path(screen) %></td>
    <td><%= link_to 'Destroy', screen, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

