
<div class="container_16" style="background-color:white;height:500px;">
  <div class="grid_9">

<div style="width:460px;padding:25px;font-size:36px;color:navy;">
<em>Welcome to <b>LearnShare</b></em>
</div>

<div style="width:460px;padding:25px;font-size:36px;color:white;background-color:Lime;">
<b>Learn</b> things that matter
</div>

<div style="width:460px;padding:25px;font-size:36px;color:white;background-color:Teal;">
<b>Share</b> what <em>you</em> know
</div>

<div style="width:460px;padding:25px;font-size:36px;color:white;background-color:Orange;">
<b>Explore</b> <em>357</em> topics
</div>

  </div>
  <div class="grid_7">

  <% if @user_errors %>
    <% if @user_errors.kind_of?(String) %>
      <%= @user_errors %>
    <% elsif @user_errors.any? %>
    <div id="errorExplanation">
      <h2><%= pluralize(@user_errors.count, "error") %></h2>
      <ul>
      <% @user_errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
  <% end %>

<div style="margin:4px;padding:2px;border:2px solid blue;">
<h2 style="padding:2px;">Login</h2>
<%= render 'login_user_form' %>
</div>

<div style="margin:4px;padding:2px;border:2px solid blue;">
<h2 style="padding:2px;">Register</h2>
<%= render 'register_user_form' %>
</div>
  </div>
</div>

