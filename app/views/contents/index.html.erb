<h1>Listing contents</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>User</th>
    <th>Position</th>
    <th>Icon</th>
    <th>Icon credit</th>
    <th>Topic</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contents.each do |content| %>
  <tr>
    <td><%= content.title %></td>
    <td><%= content.description %></td>
    <td><%= content.user_id %></td>
    <td><%= content.position %></td>
    <td><%= content.icon %></td>
    <td><%= content.icon_credit %></td>
    <td><%= content.topic_id %></td>
    <td><%= link_to 'Show', content %></td>
    <td><%= link_to 'Edit', edit_content_path(content) %></td>
    <td><%= link_to 'Destroy', content, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

