<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<p>
  <b>Topic:</b>
  <%= link_to @content.topic.title, contents_path(:topic_id => @content.topic_id) %>
  <br />

  <%= image_tag(default_icon(@content.icon,'dot.png'), :height => '30', :title => @content.icon_credit) %> 

  <b>Content:</b>
  <%= @content.title %>.
  <%= @content.description %>
  [<%= @content.user.name %>]

  <%= link_to 'Edit', edit_content_path(@content) %> |
  <%= link_to 'Back', contents_path(:topic_id => @content.topic_id) %>

</p>


